<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>SistemaGestaoPlamanSIS</display-name>
	<context-param>
		<param-name>javax.faces.VALIDATE_EMPTY_FIELDS</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>sunny</param-value>
	</context-param>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Sistema Inicial</web-resource-name>
			<url-pattern>/index.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>liberado</role-name>
			<role-name>supervisao</role-name>
			<role-name>planejamento</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerencia Ordem</web-resource-name>
			<url-pattern>/ordem/listarordem.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>liberado</role-name>
			<role-name>supervisao</role-name>
			<role-name>planejamento</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerencia Ordem</web-resource-name>
			<url-pattern>/ordem/formularioOs.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>liberado</role-name>
			<role-name>supervisao</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerencia Departamento</web-resource-name>
			<url-pattern>/centroTrabalho/departamentoIndex.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>liberado</role-name>
			<role-name>planejamento</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerencia Departamento</web-resource-name>
			<url-pattern>/centroTrabalho/cadastrarDepartamento.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>liberado</role-name>
			<role-name>planejamento</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerencia Departamento</web-resource-name>
			<url-pattern>/centroTrabalho/editarDepartamento.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>liberado</role-name>
			<role-name>planejamento</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerencia Colaboradores</web-resource-name>
			<url-pattern>/colaborador/cadastrarColaborador.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>liberado</role-name>
			<role-name>planejamento</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerencia Colaboradores</web-resource-name>
			<url-pattern>/colaborador/editarColaborador.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>liberado</role-name>
			<role-name>planejamento</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerencia Colaboradores</web-resource-name>
			<url-pattern>/colaborador/colaboradorIndex.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>liberado</role-name>
			<role-name>planejamento</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerencia solicitacoes</web-resource-name>
			<url-pattern>/solicitacaoServico/gerarSolicitacao.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>supervisao</role-name>
			<role-name>liberado</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Gerenciar Solicitacao</web-resource-name>
			<url-pattern>/solicitacaoServico/solicitacoes.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>supervisao</role-name>
			<role-name>planejamento</role-name>
			<role-name>liberado</role-name>
		</auth-constraint>
	</security-constraint>
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.xhtml</form-login-page>
			<form-error-page>/login.xhtml</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<role-name>liberado</role-name>
	</security-role>
	<security-role>
		<role-name>planejamento</role-name>
	</security-role>
	<security-role>
		<role-name>supervisao</role-name>
	</security-role>
</web-app>
